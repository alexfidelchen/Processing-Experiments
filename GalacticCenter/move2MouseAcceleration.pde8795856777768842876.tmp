class Mover {
  // Properties 
  PVector location; 
  PVector velocity; 
  PVector acceleration; 
  Mover(PVector locateTemp, PVector veloTemp, PVector accelTemp) {
    location = locateTemp; 
    velocity = veloTemp; 
    acceleration = accelTemp;
  }
  
  //Methods 
  void display() {
    fill(200);
    ellipse(location.x, location.y, 20, 20);
  }
}