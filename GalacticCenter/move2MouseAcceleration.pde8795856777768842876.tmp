//mouseLocation is a temporary variable for mouse. We'll use the real mouse later.
Mover mover1;
void setup(){
  size(300,300);
  background(255);
  location = new PVector(width/2,height/2);
  velocity = new PVector(0,0);
  mover1 = new Mover(location,velocity, acceleration);
  mover1.display();
  mouseLocation = new PVector(290,200);
  difference = PVector.sub(mouseLocation,location);
